// 2. Calcular el Ã¡rea y volumen de una esfera conociendo el valor del radio. (A = 4 PI R^2 , V = 4 / 3 PI R^3)

Console.WriteLine("ingrese el valor del radio: ");
float radio = float.Parse(Console.ReadLine());

double area = 4 * 3.14;
double area2 = area * (radio * radio);

Console.WriteLine("El area de la esfera es de: " + area2);

double vol = 4 * (Math.PI * Math.Pow(radio, 3)) / 3;

Console.WriteLine("El volumen de la esfera es de: " + vol);
